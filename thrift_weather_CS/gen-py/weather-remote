pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = weather.Client(protocol)
transport.open()

if cmd == 'get_weather_info_sorted_list':
  if len(args) != 1:
    print 'get_weather_info_sorted_list requires 1 args'
    sys.exit(1)
  pp.pprint(client.get_weather_info_sorted_list(eval(args[0]),))

elif cmd == 'get_weather_info':
  if len(args) != 1:
    print 'get_weather_info requires 1 args'
    sys.exit(1)
  pp.pprint((client.get_weather_info(args[0],)))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
